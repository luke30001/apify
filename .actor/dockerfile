FROM apify/actor-python-playwright:3.11-1.39.0

# Install Python deps
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# Copy source code
COPY . ./

# Run your actor (your main Python entry)
CMD ["python", "-m", "src.main"]
# or, if your file is just /src/main.py and you prefer direct call:
# CMD ["python", "src/main.py"]
